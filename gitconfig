[user]
	name = Ramanan Sivaranjan
    email = ramanan@funkaoshi.com

[alias]
    co = checkout
    ci = commit
    br = branch
    st = status -sb -uno
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    slog = log --pretty=oneline --decorate --abbrev-commit
    review = log -p --reverse --no-merges
    rpo = remote prune origin
    rmo = push origin --delete
    rmbr = branch -d
    serve = daemon --export-all --base-path=. --reuseaddr --informative-errors --verbose
	quickserve = daemon --verbose --export-all --base-path=.git --reuseaddr --strict-paths .git/

[core]
	editor = vim
    excludesfile = ~/.gitexcludes
	autocrlf = input

[color]
    diff = auto
    status = auto
    branch = auto

[pretty]
    slog = "%Cred %h %Creset%s%Cblue â€” %an "

[push]
	default = current

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f

[rerere]
	enabled = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[pull]
	ff = only
[credential]
	helper = store
