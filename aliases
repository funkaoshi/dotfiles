# uteful aliases
alias cat='bat'
alias ls='exa'
alias ll='ls -l'
alias vim='nvim'
alias hgrep='history 1 | grep'
alias vimrc='vim ~/.vimrc'
alias restartz='source ~/.zshrc'

# use docker / docker-compose via nerdctl
alias docker='nerdctl'
alias docker-compose='nerdctl compose'

alias opsignin='eval $(op signin my)'

alias ia="open $1 -a /Applications/iA\ Writer.app"

alias mydns='scutil --dns | grep nameserver | sort -u'

# kinit
alias oksde='op get item etnukk5lujcifcb4cqhgg7tdt4 --fields password | kinit --password-file=STDIN rsivaranjan@SDELEMENTS.COM'
alias oksec='op get item etnukk5lujcifcb4cqhgg7tdt4 --fields password | kinit --password-file=STDIN rsivaranjan@SECURITYCOMPASS.COM'
alias ksde='kinit rsivaranjan@SDELEMENTS.COM'
alias ksec='kinit rsivaranjan@SECURITYCOMPASS.COM'


# handy django aliases
alias djrun='python manage.py runserver localhost:3000'
alias djgun='python manage.py run_gunicorn --settings=gunicorn_settings -b 0.0.0.0'
alias djsync='python manage.py syncdb'
alias djtest='pytest --no-migrations --ds=test_local_settings --ignore=node_modules'
alias djmigrate='python manage.py migrate'
alias djschema='python manage.py schemamigration --auto'
alias djshell='python manage.py shell'
alias djc='python manage.py collectstatic --noinput'
alias djcelery='python manage.py celeryd --autoreload --purge'
alias dumpdata='python manage.py dumpdata'
alias loaddata='python manage.py loaddata'
alias dj='python manage.py'
alias djangocode='cd ~/local/envs/sdlc/lib/python2.6/site-packages/django/'
alias djbuild='python manage.py build_large_deployment_data'
alias emailserver='python -m smtpd -n -c DebuggingServer localhost:1025'
alias prettyjson='python -m json.tool | pygmentize -l javascript'
alias gund='gunicorn_django'

alias docker-clean='docker rm -v $(docker ps -a -q -f status=exited)'

alias update_zsh_plugins='antibody bundle < ~/local/dotfiles/zsh_plugins.txt > ~/local/dotfiles/zsh_plugins.sh'

# post review shortcut
alias pr='rbt post --bugs-closed=$(git name-rev --name-only HEAD | sed "s/\(.*\)\(\d+\)\(.*\)/\2/") --branch=$(git name-rev --name-only HEAD) --tracking-branch=origin/develop --guess-description --guess-summary --open'
