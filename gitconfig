[alias]
    co = checkout
    ci = commit
    br = branch
    st = status -sb
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    slog = log --pretty=slog --abbrev-commit --no-merges
    review = log -p --reverse --no-merges
    rpo = remote prune origin
    rmo = !sh -c 'git push origin :$1' -
    rmbr = branch -d

[core]
	editor = vim
    excludesfile = ~/.gitexcludes

[color]
    diff = auto
    status = auto
    branch = auto

[pretty]
    slog = "%Cred %h %Creset%s%Cblue â€” %an "
