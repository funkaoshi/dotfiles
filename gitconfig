[alias]
    co = checkout
    ci = commit
    br = branch
    st = status -sb
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    slog = log --pretty=oneline --decorate --abbrev-commit --no-merges
    review = log -p --reverse --no-merges
    rpo = remote prune origin
    rmo = push origin --delete
    rmbr = branch -d
    serve = daemon --export-all --base-path=.

[core]
	editor = vim
    excludesfile = ~/.gitexcludes

[color]
    diff = auto
    status = auto
    branch = auto

